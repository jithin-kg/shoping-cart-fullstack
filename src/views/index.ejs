                <input type="checkbox" name="brand" value="Addidas"> Addidas
                
                <input type="submit" value="Submit">
            </form>
        </div>
      <div class="row text-center">

      <% for(var i=0;i<data.length; i++) { %>
      <a href = "products/<%= data[i]._id %>">
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card">
            <img class="card-img-top" src="<%= data[i].imageUrl %>" alt="">
            <div class="card-body">
              <h4 class="card-title"><%= data[i].name %></h4>
              <h6 class="card-body"> <%= data[i].price %></h6>
        
              <p class="card-text">Lorem ipsum dolor sit ametneque.</p>
            </div>
            <div class="card-footer">
              <a href="/users/add-to-cart/<%= data[i]._id %>" class="btn btn-primary">Add to cart</a>
            </div>
          </div>
        </div>
      </a>
        <% } %>

       

      </div>
      
